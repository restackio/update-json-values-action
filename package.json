{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "dist/index.js",
  "scripts": {
    "format": "prettier --write '**/*.js'",
    "format-check": "prettier --check '**/*.js'",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run format && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.36.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "2.8.8"
  }
}
